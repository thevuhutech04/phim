@{
    ViewData["Title"] = "Quản trị";
}

<div class="container my-4">
    <div class="alert alert-info">
        <h4><i class="fas fa-user-shield me-2"></i>Xin chào, @Context.Session.GetString("Username")</h4>
        <p class="mb-0">Bạn đang truy cập với quyền <strong>Quản trị viên</strong>. Bạn có thể quản lý phim và thể loại từ trang này.</p>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2>Quản trị hệ thống</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 bg-dark border-primary">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-film me-2"></i>Quản lý phim</h5>
                            <p class="card-text">Thêm, sửa, xóa các bộ phim trong hệ thống.</p>
                            <a asp-action="Movies" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>Vào trang quản lý phim
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 bg-dark border-primary">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-tags me-2"></i>Quản lý thể loại</h5>
                            <p class="card-text">Thêm, sửa, xóa các thể loại phim trong hệ thống.</p>
                            <a asp-action="Categories" class="btn btn-primary">
                                <i class="fas fa-arrow-right me-2"></i>Vào trang quản lý thể loại
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 